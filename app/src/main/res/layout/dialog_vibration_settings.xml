<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/enableVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titreşimi Etkinleştir"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titreşim Şiddeti"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/strengthGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/strengthLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hafif"/>

        <RadioButton
            android:id="@+id/strengthMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orta"/>

        <RadioButton
            android:id="@+id/strengthStrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güçlü"/>
    </RadioGroup>

</LinearLayout>
