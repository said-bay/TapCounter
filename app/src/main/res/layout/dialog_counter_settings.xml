<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yazı Boyutu"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/fontSizeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/sizeSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Küçük"/>

        <RadioButton
            android:id="@+id/sizeMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orta"/>

        <RadioButton
            android:id="@+id/sizeLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Büyük"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yazı Rengi"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/colorGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beyaz"/>

        <RadioButton
            android:id="@+id/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gri"/>

        <RadioButton
            android:id="@+id/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mavi"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayaç Konumu"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/positionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/positionTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üst"/>

        <RadioButton
            android:id="@+id/positionCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orta"/>

        <RadioButton
            android:id="@+id/positionBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alt"/>
    </RadioGroup>

</LinearLayout>
